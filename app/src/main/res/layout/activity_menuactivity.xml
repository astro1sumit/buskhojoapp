<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuactivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/baseline_home_24"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:id="@+id/title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#010D30"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="4400dp"
        android:layout_height="110dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#DFD9D9">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_person_4_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:background="@drawable/borderthree"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginLeft="100dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="click here to see profile"
            android:textSize="17sp"
            android:layout_marginTop="60dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#DFD9D9"
        android:layout_marginTop="2dp"
        android:layout_below="@id/card1">

        <TextView
            android:id="@+id/editprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:drawableLeft="@drawable/baseline_edit_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:drawableLeft="@drawable/baseline_history_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:drawablePadding="15dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/favbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Buses"
            android:drawableLeft="@drawable/baseline_favorite_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:drawablePadding="15dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Ticket"
            android:drawableLeft="@drawable/baseline_cancel_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:drawablePadding="15dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium"
            android:drawableLeft="@drawable/baseline_stream_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="160dp"
            android:drawablePadding="15dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:drawablePadding="15dp"
            android:padding="10dp"/>

        <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="240dp"
        android:drawablePadding="15dp"
        android:padding="10dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
